      </div>
      <%}else{%>
        <div id="sub_item_div_4" class="sub_item_div_4"><form><button  type="submit" formaction="/erase_product/<%=i%>"  formmethod="post"  style="background-color: rgba(0,0,0,0);height: 100%;" ><img src="/Images/close-btn.png" width="150%" id="erase_item_btn_<%=i%>"></button></form></div>
        <input type="hidden"  id="sc_prod_btn_value_<%=i%>" value="<%=prod_name[i][4]%>">
        <div  class="item_div"></div>
            <div  class="item_div" value="<%=prod_name[i][4]%>">
              
              <div id="sub_item_div_1"><h1 id="btn_men_name_<%=i+1%>"><strong style="user-select: none;"><%=prod_name[i][0]%></strong></h1></div>
              
              <% for(let z = 0;z<prod_name[i][1].length;z++){%>
                <div id="sub_item_div_1_content_2">
                <%if(prod_name[i][3][z].reduce((a,b)=>a+b, 0)>0){%>
              <div id="sub_item_div_1_content_1"><h1 style="user-select: none;"><%=prod_name[i][1][z][0].toUpperCase()%></h1></div>
              
              <% for(let x = 0;x<prod_name[i][2][z].length;x++){%>
                <%if(prod_name[i][3][z][x]>0){%>
                <h2 style="user-select: none;"><img src="/Images/maki_vineta.png" width="20px"> <%=prod_name[i][2][z][x]%> x <%=prod_name[i][3][z][x]%></h2>
