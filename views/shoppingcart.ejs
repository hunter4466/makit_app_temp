        <div id="del_sub_item_div_2"><h1 style="user-select: none;">---></h1></div>
        <div id="del_sub_item_div_3"><h1 style="user-select: none;">S/ 4.90</h1></div>
</div>

  <div style="border-style:solid; border-top: none;border-left: none;border-right: none; border-width: 2px;border-color: white;"></div>
   
<div class="item_div">
  <div id="del_sub_item_div_1"><h1 style="user-select: none;">Total</h1></div>
        <div id="del_sub_item_div_2"><h1 style="user-select: none;">---></h1></div>
        <% let sum=parseFloat(0);  for(let i=0;i<prod_price.length;i++){ sum = sum+parseFloat(prod_price[i]); }%>
        <div id="del_sub_item_div_3"><h1 style="user-select: none;">S/ <%=parseFloat(sum+4.90).toFixed(2)%></h1></div>
</div>
<div id="footer_btns">
  <form>
    <button id="confirmation_open" type="button">Borrar todo</button>
    <button id="confirmation_send_order" type="button" >Enviar pedido</button>
    <button ID="keep_buying" type="submit" formaction="/firstmenulist1closetopslide" formmethod="POST">Seguir comprando</button>
  </form>
</div>
</div>

<%- include ('mod_product')-%>

